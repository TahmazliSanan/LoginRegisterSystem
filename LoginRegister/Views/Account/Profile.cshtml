@{
    ViewData["Title"] = "My Profile";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col-4">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>

        <form method="post" asp-action="ProfileChangeFullName">
            <div class="form-group">
                <label class="form-label small">Full Name</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control"
                           placeholder="John Doe" value="@ViewData["FullName"]" />
                    <button class="btn btn-secondary" type="submit">
                        <i class="fa-solid fa-floppy-disk me-2"></i>
                        Save
                    </button>
                </div>
            </div>
        </form>

        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small">New Password</label>
                <div class="input-group mb-3">
                    <input name="newpassword" type="password" class="form-control"
                           placeholder="P@ssW0rd" />
                    <button class="btn btn-secondary" type="submit">
                        <i class="fa-solid fa-floppy-disk me-2"></i>
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @if (ViewData["Result"] != null && ViewData["Result"] is "FullNameChanged")
    {
        <script>
            toastr["success"]("Your full name was changed successfully!", "Operation")
        </script>
    }

    @if (ViewData["Result"] != null && ViewData["Result"] is "PasswordChanged")
    {
        <script>
            toastr["success"]("Your password was changed successfully!", "Operation")
        </script>
    }
}